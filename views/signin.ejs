<%include partialadmin/adminhead %>

<body class="bg-dark">


    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="index.html">
                        <img class="align-content" src="images/logo.png" alt="">
                    </a>
                </div>
                <div class="login-form">
                    <form action="/signin" method="post">
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" name="email" id="email" class="form-control" placeholder="Email">
                        </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" id="password" name="password" class="form-control" placeholder="Password">
                        </div>
                                <div class="checkbox">
                                    <label for="rememberMe">
                                <input type="checkbox" name="rememberMe" id="rememberMe"> Remember Me
                            </label>


                                </div>
                                <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Sign in</button>

                                <div class="register-link m-t-15 text-center">
                                    <p>Don't have account ? <a href="/signup"> Sign Up Here</a></p>
                                </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/vendors/jquery/dist/jquery.min.js"></script>
    <script src="/vendors/popper.js/dist/umd/popper.min.js"></script>
    <script src="/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/assets/js/main.js"></script>

    <%include partialadmin/adminscript %>
<script src="/javascripts/jquery-3.4.1.min.js" charset="utf-8"></script>
<script src="/javascripts/js.cookie.min.js" charset="utf-8"></script>

</body>
<script type="text/javascript">
   $(document).ready(function(){
      $('#rememberMe').click(function(){
        if($(this).is(":checked")){
          Cookies.set('email', $('#email').val());
          Cookies.set('password', $('#password').val());
        }else if($(this).is(":not(:checked)")){
          Cookies.remove('email');
          Cookies.remove('password');
        }
      });
      if(Cookies.get('email')){
        $('#email').val(Cookies.get('email'));
        $('#rememberMe').prop('checked', true);
      }
     if(Cookies.get('password')){
        $('#password').val(Cookies.get('password'));
        $('#rememberMe').prop('checked', true);
      }
    });
  </script>
</html>
